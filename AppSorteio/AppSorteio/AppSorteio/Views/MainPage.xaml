<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppSorteio.MainPage">

    <StackLayout BackgroundColor="#222431">
        <Label Text="Aplicativo para sortear listas" TextColor="White" FontAttributes="Bold" Margin="0,40" FontSize="20" HorizontalOptions="Center"/>
        <Frame HorizontalOptions="FillAndExpand" Margin="20,0" CornerRadius="5" Padding="0" HeightRequest="60" VerticalOptions="CenterAndExpand" BackgroundColor="White">
            <Label  x:Name="lbNome"  TextColor="Black"  FontAttributes="Bold" Text="Sorteado" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"  FontSize="25"/>
        </Frame>
        
        <Button HorizontalOptions="FillAndExpand" Clicked="Button_Clicked" Margin="70,0,70,30" VerticalOptions="EndAndExpand" Text="sortear" TextColor="Black" CornerRadius="30" BackgroundColor="White"/>
    </StackLayout>

</ContentPage>
